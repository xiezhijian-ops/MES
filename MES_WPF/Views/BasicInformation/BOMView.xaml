<UserControl x:Class="MES_WPF.Views.BasicInformation.BOMView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MES_WPF.Views.BasicInformation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1100">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card materialDesign:ShadowAssist.Darken="True"
                             Margin="10">
            <!-- 搜索区域 -->
            <Grid Margin="16,16,16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="请输入BOM编码或名称搜索"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Height="50"
                         VerticalAlignment="Center" />

                <!-- 产品下拉框 -->
                <ComboBox Grid.Column="1"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="产品"
                          ItemsSource="{Binding Products}"
                          DisplayMemberPath="ProductName"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding SelectedProductId}"
                          Width="120"
                          Margin="8,0,0,0"
                          Height="50"
                          VerticalAlignment="Center">
                </ComboBox>

                <!-- 状态下拉框 -->
                <ComboBox Grid.Column="2"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="状态"
                          SelectedIndex="{Binding SelectedStatus}"
                          Width="100"
                          Margin="8,0,0,0"
                          Height="50"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="全部" />
                    <ComboBoxItem Content="草稿" />
                    <ComboBoxItem Content="审核中" />
                    <ComboBoxItem Content="已发布" />
                    <ComboBoxItem Content="已作废" />
                </ComboBox>

                <!-- 默认BOM -->
                <CheckBox Grid.Column="3"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          Content="仅默认BOM"
                          IsChecked="{Binding OnlyDefaultBOM}"
                          Margin="8,0,0,0"
                          VerticalAlignment="Center" />

                <!-- 搜索按钮 -->
                <Button Grid.Column="4"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#2196F3"
                        Foreground="White"
                        Content="搜索"
                        Command="{Binding SearchBOMsCommand}"
                        Margin="8,0,0,0"
                        Height="40"
                        Width="80"
                        VerticalAlignment="Center" />

                <!-- 重置按钮 -->
                <Button Grid.Column="5"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Content="重置"
                        Command="{Binding ResetSearchCommand}"
                        Margin="8,0,0,0"
                        Height="40"
                        Width="80"
                        VerticalAlignment="Center" />
            </Grid>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!-- 操作按钮区 -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="16,0,16,8"
                            VerticalAlignment="Top">
                    <Button Content="+ 新增"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2196F3"
                            Foreground="White"
                            Command="{Binding AddBOMCommand}"
                            Height="36"
                            Width="80"
                            Margin="0,0,8,0" />

                    <Button Content="批量删除"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding BatchDeleteCommand}"
                            Height="36"
                            Width="80"
                            Margin="0,0,8,0" />

                    <Button Content="+ 导出"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ExportBOMsCommand}"
                            Height="36"
                            Width="80" />
                </StackPanel>

                <!-- BOM列表 -->
                <Border Grid.Row="1"
                        Background="White"
                        Margin="16,0,16,0"
                        CornerRadius="4"
                        BorderThickness="1"
                        BorderBrush="#EEEEEE">
                    <Grid>
                        <DataGrid ItemsSource="{Binding BOMsView}"
                                  SelectedItem="{Binding SelectedBOM}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowHeight="48"
                                  Margin="0,0,0,0">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader"
                                       BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="Background"
                                            Value="#F5F5F5" />
                                    <Setter Property="Foreground"
                                            Value="#666666" />
                                    <Setter Property="FontWeight"
                                            Value="SemiBold" />
                                    <Setter Property="Padding"
                                            Value="8" />
                                    <Setter Property="Height"
                                            Value="40" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!-- 选择框 -->
                                <DataGridTemplateColumn Width="50">
                                    <DataGridTemplateColumn.Header>
                                        <CheckBox />
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- BOM编码 -->
                                <DataGridTextColumn Header="BOM编码"
                                                    Binding="{Binding BomCode}"
                                                    Width="120" />

                                <!-- BOM名称 -->
                                <DataGridTextColumn Header="BOM名称"
                                                    Binding="{Binding BomName}"
                                                    Width="150" />

                                <!-- 产品名称 -->
                                <DataGridTextColumn Header="产品名称"
                                                    Binding="{Binding Product.ProductName}"
                                                    Width="150" />

                                <!-- 版本号 -->
                                <DataGridTextColumn Header="版本号"
                                                    Binding="{Binding Version}"
                                                    Width="100" />

                                <!-- 默认版本 -->
                                <DataGridTemplateColumn Header="默认版本"
                                                        Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsDefault, Mode=OneWay}"
                                                      IsEnabled="False"
                                                      HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 状态 -->
                                <DataGridTemplateColumn Header="状态"
                                                        Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="1">
                                                                <Setter Property="Text" Value="草稿" />
                                                                <Setter Property="Foreground" Value="#9E9E9E" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="2">
                                                                <Setter Property="Text" Value="审核中" />
                                                                <Setter Property="Foreground" Value="#FFC107" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="3">
                                                                <Setter Property="Text" Value="已发布" />
                                                                <Setter Property="Foreground" Value="#4CAF50" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="4">
                                                                <Setter Property="Text" Value="已作废" />
                                                                <Setter Property="Foreground" Value="#F44336" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- 生效日期 -->
                                <DataGridTextColumn Header="生效日期"
                                                    Binding="{Binding EffectiveDate, StringFormat=yyyy-MM-dd}"
                                                    Width="100" />

                                <!-- 失效日期 -->
                                <DataGridTextColumn Header="失效日期"
                                                    Binding="{Binding ExpiryDate, StringFormat=yyyy-MM-dd}"
                                                    Width="100" />

                                <!-- 创建时间 -->
                                <DataGridTextColumn Header="创建时间"
                                                    Binding="{Binding CreateTime, StringFormat=yyyy-MM-dd HH:mm:ss}"
                                                    Width="150" />

                                <!-- 操作 -->
                                <DataGridTemplateColumn Header="操作"
                                                        Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="编辑"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#2196F3"
                                                        Command="{Binding DataContext.EditBOMCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,8,0" />

                                                <Button Content="明细"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#2196F3"
                                                        Command="{Binding DataContext.ViewBOMItemsCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,8,0" />

                                                <Button Content="设为默认"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#FFC107"
                                                        Command="{Binding DataContext.SetDefaultCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Margin="0,0,8,0" />

                                                <Button Content="删除"
                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                        Foreground="#F44336"
                                                        Command="{Binding DataContext.DeleteBOMAsyncCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}" 
                                                        />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- 加载指示器 -->
                        <Grid Visibility="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                              Background="#80FFFFFF">
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Value="0"
                                         IsIndeterminate="True"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center" />
                        </Grid>

                        <!-- 空数据提示 -->
                        <Grid Visibility="{Binding BOMs.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}"
                              Background="{DynamicResource MaterialDesignPaper}">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FileTree"
                                                         Width="48"
                                                         Height="48"
                                                         HorizontalAlignment="Center" />
                                <TextBlock Text="暂无BOM数据"
                                           FontSize="16"
                                           Margin="0,16,0,8" />
                                <Button Content="添加BOM"
                                        Command="{Binding AddBOMCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 分页控件 -->
                <Grid Grid.Row="2"
                      Margin="16,8,16,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 每页显示数量 -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="共 "
                                   VerticalAlignment="Center" />
                        <TextBlock Text="{Binding TotalCount}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" 条"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0" />

                        <TextBlock Text="10条/页"
                                   VerticalAlignment="Center" />
                        <materialDesign:PackIcon Kind="ChevronDown"
                                                 VerticalAlignment="Center"
                                                 Margin="4,0,0,0" />
                    </StackPanel>

                    <!-- 分页导航 -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding PreviousPageCommand}"
                                Padding="8"
                                MinWidth="0">
                            <materialDesign:PackIcon Kind="ChevronLeft" />
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding GoToPageCommand}"
                                CommandParameter="1"
                                Content="1"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="8"
                                MinWidth="0" />

                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding NextPageCommand}"
                                Padding="8"
                                MinWidth="0">
                            <materialDesign:PackIcon Kind="ChevronRight" />
                        </Button>

                        <TextBlock Text="前往"
                                   VerticalAlignment="Center"
                                   Margin="8,0" />
                        <TextBox Width="40"
                                 Text="{Binding CurrentPage}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0" />
                        <TextBlock Text="页"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- 新增/编辑BOM蒙版 -->
        <materialDesign:DialogHost Grid.RowSpan="2"
                                   IsOpen="{Binding IsBOMDialogOpen}"
                                   CloseOnClickAway="False">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Width="600"
                                     Padding="16"
                                     UniformCornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <TextBlock Grid.Row="0"
                                   Text="{Binding IsEditMode, Converter={StaticResource BooleanConverter}, ConverterParameter=编辑BOM|新增BOM}"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Margin="0,0,0,16" />

                        <!-- 表单内容 -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      MaxHeight="500">
                            <StackPanel>
                                <!-- 基本信息 -->
                                <TextBlock Text="基本信息"
                                           FontWeight="Medium"
                                           Margin="0,0,0,8" />

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- BOM编码 -->
                                    <TextBox Grid.Row="0"
                                             Grid.Column="0"
                                             Margin="0,8,8,8"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="BOM编码*"
                                             Text="{Binding EditingBOM.BomCode}" />

                                    <!-- BOM名称 -->
                                    <TextBox Grid.Row="0"
                                             Grid.Column="1"
                                             Margin="8,8,0,8"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="BOM名称*"
                                             Text="{Binding EditingBOM.BomName}" />

                                    <!-- 产品选择 -->
                                    <ComboBox Grid.Row="1"
                                              Grid.Column="0"
                                              Margin="0,8,8,8"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="产品*"
                                              ItemsSource="{Binding Products}"
                                              DisplayMemberPath="ProductName"
                                              SelectedValuePath="Id"
                                              SelectedValue="{Binding EditingBOM.ProductId}" />

                                    <!-- 版本号 -->
                                    <TextBox Grid.Row="1"
                                             Grid.Column="1"
                                             Margin="8,8,0,8"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="版本号*"
                                             Text="{Binding EditingBOM.Version}" />

                                    <!-- 状态 -->
                                    <ComboBox Grid.Row="2"
                                              Grid.Column="0"
                                              Margin="0,8,8,8"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="状态*"
                                              SelectedIndex="{Binding EditingBOM.Status, Converter={StaticResource IndexConverter}, ConverterParameter=-1}">
                                        <ComboBoxItem Content="草稿" />
                                        <ComboBoxItem Content="审核中" />
                                        <ComboBoxItem Content="已发布" />
                                        <ComboBoxItem Content="已作废" />
                                    </ComboBox>

                                    <!-- 默认版本 -->
                                    <CheckBox Grid.Row="2"
                                              Grid.Column="1"
                                              Margin="8,16,0,8"
                                              Content="默认版本"
                                              IsChecked="{Binding EditingBOM.IsDefault}" />

                                    <!-- 生效日期 -->
                                    <DatePicker Grid.Row="3"
                                                Grid.Column="0"
                                                Margin="0,8,8,8"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="生效日期*"
                                                SelectedDate="{Binding EditingBOM.EffectiveDate}" />

                                    <!-- 失效日期 -->
                                    <DatePicker Grid.Row="3"
                                                Grid.Column="1"
                                                Margin="8,8,0,8"
                                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="失效日期"
                                                SelectedDate="{Binding EditingBOM.ExpiryDate}" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- 按钮区域 -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,16,0,0">
                            <Button Content="取消"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding CancelEditCommand}"
                                    Margin="0,0,8,0" />
                            <Button Content="保存"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#2196F3"
                                    Foreground="White"
                                    Command="{Binding SaveBOMCommand}" />
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>